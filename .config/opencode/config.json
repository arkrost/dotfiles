{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "enabled": true
    },
    "deepwiki": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-deepwiki@latest"
      ],
      "enabled": true
    }
  }
}
